
<%= form_for(book) do |f| %>
    <ul class="error">
    	<% if book.errors.any? %>
    	    <li><%= pluralize(book.errors.count, "error") %><span>prohibiited this book from being saved:</span></li>

    		<% book.errors.full_messages.each do |message| %>
    		<li><%= message %></li>
    		<% end %>
    </ul>
        <% end %>



	<div class="field row">
		<%= f.label :title %>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>

	<div class="field row">
		<%= f.label :body %>
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
	</div>

	<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>
